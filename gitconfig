[core]
	pager = "less -FRX"
	excludesfile = ~/.gitignore
[user]
	name = Andrzej Ostruszka
	email = andrzej.ostruszka@gmail.com
[color]
	diff = auto
[alias]
	aliases = config --get-regexp alias.
	ci = commit
	co = checkout
	cp = cherry-pick
	s  = status
	b  = branch
	d  = diff
	dc = diff --cached
	l  = log --pretty=format:\"%Cgreen%h%Creset %s\"
	sl = stash list
	# Mnemonic is "stash save"
	ss = stash push
	# Mnemonic is "stash view"
	sv = stash show
	sa = stash apply
	sp = stash pop
	# Mnemonic "publish"
	pub = push --recurse-submodules=on-demand
	track = for-each-ref --format='%(refname:short) -> %(upstream:short)' refs/heads
[gui]
	fontdiff = -family \"Courier New\" -size 10 -weight normal -slant roman -underline 0 -overstrike 0
	encoding = utf-8
	warndetachedcommit = true
[rerere]
	enabled = 1
[diff]
	mnemonicprefix = true
	submodule = log
	renames = true
[push]
	default = upstream
[http]
	cookiefile = ~/.gitcookies
